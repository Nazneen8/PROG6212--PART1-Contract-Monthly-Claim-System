        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contract_Monthly_Claim_System"
        mc:Ignorable="d"
        Title="ViewClaim" Height="450" Width="800">
    <Grid>
         <Label FontSize="20" IsEnabled="False">View Claim</Label>
 <StackPanel>

     <Button x:Name="CheckPB1" Height="20" Width="20" Margin="20,90" VerticalAlignment="Top" HorizontalAlignment="Right" />
