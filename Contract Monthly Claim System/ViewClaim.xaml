     <Button x:Name="CheckPB2" Height="20" Width="20" Margin="20,-60, 20,25" VerticalAlignment="Top" HorizontalAlignment="Right" />
     <ProgressBar x:Name="PB2" Height="25" Width="200" Margin="60, -60" HorizontalAlignment="Right" VerticalAlignment="Top"/>

     <Button x:Name="CheckPB3" Height="20" Width="20" Margin="20,-10" VerticalAlignment="Top" HorizontalAlignment="Right" />
     <ProgressBar x:Name="PB3" Height="25" Width="200" Margin="60, -90" HorizontalAlignment="Right"/>

 </StackPanel>
 <StackPanel>
     <Label Content="ID 001: Nazneen Van der Fort                                      ... Hours worked..." Width="378" Margin="10,90,-20,120" HorizontalAlignment="Left" FontSize="14"/>
