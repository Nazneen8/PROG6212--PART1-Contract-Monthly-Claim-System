<Window x:Class="Contract_Monthly_Claim_System.ClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contract_Monthly_Claim_System"
        mc:Ignorable="d"
        Title="ClaimWindow" Height="450" Width="800">
    <Grid>
        
        <StackPanel Margin="5">

            <TextBlock Text="Claim Details:" Margin="0,0,0,5" FontSize="18"/>
            <TextBox x:Name="ClaimDetailsTextBox" Height="100" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Text="" Width="763"/>


            <TextBlock Text="Attach Document:" Margin="279,40,0,5" FontSize="18"/>
            <Button x:Name="BrowseDocumentButton" Content="Browse..." Width="226" FontSize="18"/>


            <Button x:Name="SubmitClaimButton" Content="Submit Claim" Margin="0,30,0,0"  Width="226" FontSize="18"/>
            <Button x:Name="SaveClaimBtn" Content="Save Claim As Draft" Margin="0,30,0,0"  Width="226" FontSize="18"/>
        </StackPanel>
       
    </Grid>
</Window>
