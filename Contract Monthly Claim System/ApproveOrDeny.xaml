<Window x:Class="Contract_Monthly_Claim_System.ApproveOrDeny"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contract_Monthly_Claim_System"
        mc:Ignorable="d"
        Title="ApproveOrDeny" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Submitted Claims:" Margin="0,0,0,5" FontSize="16"/>
            <ListBox Name="ClaimsListBox" Height="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Name="ApproveButton" Content="Approve" Width="100" Margin="5" Click="ApproveButton_Click"  />
                <Button Name="DeclineButton" Content="Decline" Width="100" Margin="5" Click="DeclineButton_Click"  />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
